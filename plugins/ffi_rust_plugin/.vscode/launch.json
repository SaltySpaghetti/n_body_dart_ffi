    "version": "0.2.0",
    "configurations": [

        {
            "name": "ffi_rust_plugin",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "ffi_rust_plugin (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "ffi_rust_plugin (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "Debug Rust native Linux",
            "preLaunchTask": "compile Rust linux debug",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "program": "${workspaceFolder}/example/build/linux/x64/debug/bundle/ffi_rust_plugin_example",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Rust native Windows",
            "preLaunchTask": "compile Rust windows debug",
            "type": "cppvsdbg",
            "request": "launch",
            "args": [],
            "program": "${workspaceFolder}/example/build/windows/runner/Debug/ffi_rust_plugin_example.exe",
            "cwd": "${workspaceFolder}"
        }
    ]
}